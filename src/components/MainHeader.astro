---
import Logo from "./ui/Logo.astro";
import NavlinkContainer from "./ui/NavlinkContainer.astro";
import Social from "./ui/Social.jsx";
import ThemeController from "./ui/ThemeController.astro";
---

<header
  class="bg-base-200/10 border-b-base/5 sticky top-0 py-6 shadow-lg backdrop-blur-md"
>
  <div class="container mx-auto flex items-center justify-between px-4">
    <Logo />

    <div class="flex items-center gap-4">
      <NavlinkContainer />
      <Social client:load />
      <ThemeController />
    </div>
  </div>
</header>
