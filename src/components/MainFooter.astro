---
// components
import Logo from "./ui/Logo.astro";
import Social from "./ui/Social.jsx";
import FooterLink from "./ui/FooterLink.astro";

// svg images
import divider from "../assets/footer.svg";
import Image from "astro/components/Image.astro";
---

<footer class="border-t-base/5 bg-base-300 py-4">
  <div class="container mx-auto p-4">
    <div class="flex items-center justify-between">
      <Logo />
      <FooterLink />
      <div class="">
        <h2 class="mb-4 font-serif text-2xl underline underline-offset-16">
          Social
        </h2>
        <Social client:load />
      </div>
    </div>

    <Image
      src={divider}
      alt={"divider"}
      class="mx-auto"
      width="1200"
      height="40"
    />

    <p class="py-2 text-center text-sm">
      &copy; Designed and Developed by <a
        href="https://github.com/xshubhamg"
        target="_blank"
        class="hover:text-primary font-serif text-sm underline underline-offset-10 hover:font-bold"
        >Shubham Giri</a
      >
    </p>
  </div>
</footer>
